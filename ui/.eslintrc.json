{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns":["**/*/*.css"],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "space-before-function-paren": "off",
        "react/self-closing-comp": [
            "error",
            {
                "component": true,
                "html": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "react/react-in-jsx-scope": "off"
    }
}